{{!-- jumbotron --}}
<div class="jumbotron">
        <h1 class="display-4">NBA Headlines</h1>
</div>

{{!-- cards for each headline --}}
<section class="container dashboard wrapper">
    <div class="row">
        <div class="col">
            <div class="col-12">
                {{#each nbaNews}}
                    <div class="card">
                        <div class="card-header text-right">
                            <button class="btn btn-success">SAVE ARTICLE</button>
                        </div>
                        <div class="card-body text-center">
                            <p>{{this.title}}</p>
                            <hr>
                            <p>{{this.link}}</p>
                        </div>
                    </div>
                    <br><br>
                {{/each}}
            </div>
        </div>
    </div>
</section>