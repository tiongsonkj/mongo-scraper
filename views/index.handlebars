{{!-- navbar --}}
<nav class="navbar navbar-expand-lg navbar-dark fixed-top bg-dark" id="mainNav">
    <div class="container">
        <a class="navtext navbar-brand js-scroll-trigger" href="#page-top"><i class="fab fa-dribbble fa-lg"></i></a>

        <div class="navbar-collapse collapse" id="navbarResponsive">
            <ul class="navbar-nav ml-auto justify-content-end">
                <li class="navtext nav-item px-2">
                    <a class="nav-link active" href="#">Home</a>
                </li>
                <li class="navtext nav-item px-2">
                    <a class="nav-link active" href="#">Saved Articles</a>
                </li>
                <li class="navtext nav-item px-2">
                    <button class="btn btn-outline-warning" type="submit" id="scrape-btn">SCRAPE NEW ARTICLES!</button>
                </li>
            </ul>
        </div>
