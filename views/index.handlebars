{{!-- navbar --}}
<nav class="navbar navbar-expand-lg navbar-dark fixed-top bg-dark" id="mainNav">
    <div class="container">
        <a class="navtext navbar-brand js-scroll-trigger" href="#page-top"><i class="fab fa-dribbble fa-lg"></i></a>

        <div class="navbar-collapse collapse" id="navbarResponsive">
            <ul class="navbar-nav ml-auto justify-content-end">
                <li class="navtext nav-item px-2">
                    <a class="nav-link active" href="#">Home</a>
                </li>
                <li class="navtext nav-item px-2">
                    <a class="nav-link active" href="#">Saved Articles</a>
                </li>
                <li class="navtext nav-item px-2">
                    <button class="btn btn-outline-warning" type="submit" id="scrape-btn">SCRAPE NEW ARTICLES!</button>
                </li>
            </ul>
        </div>
    </div>
</nav>

{{!-- jumbotron --}}
<div class="jumbotron">
        <h1 class="display-4">NBA Headlines</h1>
</div>

{{!-- cards for each headline --}}
<section class="container dashboard wrapper">
    <div class="row">
        <div class="col">
            <div class="col-12">
                {{#each nbaNews}}
                    <div class="card">
                        <div class="card-header text-right">
                            <button class="btn btn-primary" data-target="#noteModal" data-toggle="modal">ARTICLE NOTES</button>
                            <button class="btn btn-success">SAVE ARTICLE</button>
                        </div>
                        <div class="card-body text-center">
                            <p>{{this.title}}</p>
                            <hr>
                            <p>{{this.link}}</p>
                        </div>
                    </div>
                    <br><br>

                    {{!-- each card will have this modal --}}
                    <div class="modal" id="noteModal" tabindex="-1">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5>Notes for Article: {{this._id}}</h5>
                                    <button class="close" data-dismiss="modal">&times;</button>
                                </div>
                                {{!-- modal body --}}
                                <div class="modal-body">
                                    {{!-- div block that contains the notes for the article --}}
                                    <div id="art-notes"></div>
                                    {{!-- form for the article note --}}
                                    <form>
                                        <div class="form-group">
                                            <input class="form-control" placeholder="New Note" type="text" id="inputNotes">
                                        </div>
                                    </form>
                                </div>
                                {{!-- modal footer --}}
                                <div class="modal-footer">
                                    <button class="btn btn-success">SAVE NOTE</button>
                                </div>
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
</section>